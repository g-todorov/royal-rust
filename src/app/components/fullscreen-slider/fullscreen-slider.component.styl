@import 'variables'

.landing-page
  position fixed
  left 0
  bottom 0
  height 100%
  width 100%
  padding $space

  .video-wrapper
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    overflow hidden

    video
      left 50%
      min-height 100%
      min-width 100%
      position absolute
      top 50%
      transform translate(-50%, -50%)

  .overlay
    height 100vh
    position fixed
    top 0
    left 0
    width 100vw
    background $black-nero
    opacity 0.85

  .shop-button
    align-items center
    border 1px solid white
    color white
    display flex
    font-size 35px
    height 50px
    justify-content center
    left calc(50% - 100px)
    position relative
    top 0
    width 200px
    z-index $layer-bottom
