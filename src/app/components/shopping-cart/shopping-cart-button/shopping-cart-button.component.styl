@import 'variables'

.shopping-cart-button
  cursor pointer
  height 50px
  margin $space
  position absolute
  right 0
  width 50px
  z-index $layer-top

  &.lower-z-index
    z-index $layer-basic

  .menu-bottom-line
  .menu-left-line
  .menu-right-line
    background white
    display block
    height 5px
    position absolute
    width 100%

  .menu-bottom-line
    bottom 0

  .menu-left-line
    transform rotate(90deg)
    transform-origin 2.5px

  .menu-right-line
    transform rotate(-90deg)
    transform-origin calc(100% - 2.5px)

  .shopping-cart-items-count
    align-items center
    color white
    display flex
    font-size $space-medium
    font-size: 1.5rem
    justify-content center
    position relative
    top 0.5rem
