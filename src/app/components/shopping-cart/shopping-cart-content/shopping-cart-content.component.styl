@import 'variables'

.shopping-cart
  background black
  color white
  height 100vh
  position absolute
  width 100vw
  z-index $layer-top-sub

  .shopping-cart-overflow
    background black
    bottom 0
    left $space
    overflow hidden
    overflow-y auto
    position absolute
    right $space
    top 90px

    .shopping-cart-content
      align-items center
      bottom 0
      display flex
      flex-wrap wrap
      justify-content center
      left 0
      overflow-y auto
      padding $space
      padding-right 2rem
      position absolute
      right -17px
      top 0
