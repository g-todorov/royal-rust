//Colours
$black-nero = #252525
$black-almost = #010101
$white-smoke = #F2F2F2
$baby-powder = #FDFFFC
$blue-jeans = #5DB7DE
$smoky-topaz = #984B43
$harvard-crimson = #C20114
$middle-red-purple = #0B0033
$cyber-grape = #5A4987
$raisin-black = #222222
$rich-black = #02111B

// Sizes and Spaces
$space = 1rem
$space-nudge = $space / 10
$space-micro = $space / 4
$space-small = $space / 2
// $space-medium-small = $space-small + $space-micro
$space-medium = $space * 1.5
$space-large = $space * 2
$space-x-large = $space * 2.5
$space-xx-large = $space * 3

// Typography
$font-size-x-small = .5rem
$font-size-small = .75rem
$font-size = 1rem
$font-size-medium = 1.5rem
$font-size-large = 2rem
$font-size-x-large = 2.5rem

// Z-index
$layer-bottom = 10
$layer-basic-sub = 20
$layer-basic = 30
$layer-top-sub = 40
$layer-top = 50

@css
:export {
  spaceLarge: $space-large;
  spaceMedium: $space-medium;
}
