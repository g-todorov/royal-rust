.hamburger-menu-wrapper
  z-index 20

.hamburger-menu-content
  align-items flex-start
  background black
  color white
  display flex
  flex-direction column
  font-size 5rem
  height 100vh
  justify-content center
  position absolute
  text-transform uppercase
  width 100vw
  z-index 20

  .menu-item
    cursor pointer
    line-height .9
    margin-bottom -15px
    overflow hidden
    transform translateY(0)
    transition all .3s

  .menu-item-line
    background white
    height 5px
    width 100%

  .menu-item-wrapper
    margin-left 10%
    overflow hidden
    padding-top 10px

  .menu-item:hover
    transform translateY(-10px)
    transition all .3s

.hamburger-menu-button
  align-items  center
  // background red
  display flex
  height 50px
  justify-content center
  position absolute
  width 50px
  z-index 21

  .menu-top-line
  .menu-middle-line
  .menu-bottom-line
    background white
    display block
    height 5px
    position absolute
    width 100%

  .menu-top-line
    top 0

  .menu-bottom-line
    bottom 0
