
@import 'variables'

.hamburger-menu-button
  align-items  center
  cursor pointer
  display flex
  height 50px
  justify-content center
  margin $space
  position absolute
  width 50px
  z-index $layer-top

  &.lower-z-index
    z-index $layer-basic

  .menu-top-line
  .menu-middle-line
  .menu-bottom-line
    background white
    display block
    height 5px
    position absolute
    width 100%

  .menu-top-line
    top 0

  .menu-bottom-line
    bottom 0
