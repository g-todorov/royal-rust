@import 'variables'

.shop-page
  position absolute
  left 0
  bottom 0
  height 100%
  width 100%
  padding $space
  background rebeccapurple

  .shop-page-overflow
    background black
    bottom 0
    left $space
    overflow hidden
    overflow-y auto
    position absolute
    right $space
    top 90px

    .shop-page-content
      bottom 0
      display flex
      flex-wrap wrap
      left 0
      overflow-y auto
      padding $space
      padding-right 2rem
      position absolute
      right -17px
      top 0
      justify-content center
      align-items center
      
      .shopping-item
        color white
        flex-basis calc(50% - 2rem)

        img 
          max-width 100%
          max-height 100%