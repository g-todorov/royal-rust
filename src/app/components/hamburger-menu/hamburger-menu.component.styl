.hamburger-menu-content-sublayer
  background yellow
  height 100vh
  position absolute
  width 100vw
  z-index 20

.hamburger-menu-content
.hamburger-menu-breadcrumb
  // align-items flex-start
  background black
  color white
  // display flex
  // flex-direction column
  font-size 5rem
  height 100vh
  // justify-content center
  position absolute
  text-transform uppercase
  width 100vw
  z-index 20

  .menu-item-line
    background white
    height 5px
    width 100%

  .menu-item-wrapper
    overflow hidden
    padding-top 10px
    position absolute
    width calc(100% - 100px)
    left 100px

    &.shop
      transform translateY(40px)

    &.videos
      transform translateY(100px)

    &.music
      transform translateY(160px)
    
    &.bio
      transform translateY(220px)

    .menu-item
      cursor pointer
      line-height .9
      margin-bottom -15px
      overflow hidden
      transform translateY(0)
      transform translateX(0)
      transition all .3s
      position relative

      // &.active
      //   position fixed
      //   transform translateX(110vw)

      
      // .menu-item:not(.active):hover
      //   transform translateY(-10px)
      //   transition all .3s

    .menu-item:hover
      transform translateY(-10px)
      transition all .3s

  .menu-logo
    // transform translateY(100%)
    position absolute
    top 40px
    right 20%
    background-image url('/assets/logos/logo.png')
    background-size contain
    background-repeat no-repeat
    // background url('/assets/backgrounds/main-background.png')
    width 30vw
    height 50vh

.hamburger-menu-button
  align-items  center
  display flex
  height 50px
  justify-content center
  position absolute
  width 50px
  z-index 21

  .menu-top-line
  .menu-middle-line
  .menu-bottom-line
    background white
    display block
    height 5px
    position absolute
    width 100%

  .menu-top-line
    top 0

  .menu-bottom-line
    bottom 0
